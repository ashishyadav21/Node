{
    "openapi": "3.0.0",
    "info": {
        "version": "2.0.0",
        "title": "Simple API Overview",
        "description": "This is to check APIs Configuration",
        "contact": {},
        "license": {}
    },
    "servers": [
        {
          "url": "http://localhost:3000",
          "description": "This is my local server."
        },
        {
          "url": "http://staging-api.example.com",
          "description": "Optional server description, e.g. Internal staging server for testing"
        }
      ],
    "$schemes":["http","Https"], 
     "paths": {
        "/users": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Get all users",
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref":"#/definitions/models.UserResponse"
                            }
                        }
                    }
                }
            },
            "post": {
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "Create a Users",
                "parameters": [
                    {
                        "description": "Create User",
                        "name": "user",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/models.createUserRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/models.UserResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/models.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/users/{userId}":{
            "get":{
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "type": "integer",
                        "description": "User ID",
                        "name": "userId",
                        "in": "path",
                        "required": true
                    }
                ],
                "summary": "Get user detail",
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref":"#/definitions/models.UserResponse"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.createUserRequest": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string",
                    "example": "Ashish"
                },
                "password": {
                    "type": "string",
                    "example": "password"
                },
                "dob": {
                    "type": "string",
                    "example": "21/07/1992"
                },
                "firstName": {
                    "type": "string",
                    "example": "Ashish"
                },
                "lastName": {
                    "type": "string",
                    "example": "Yadav"
                }
            }
        },

        "models.UserResponse":{
            "type": "object",
            "properties":{
                "username": {
                    "type":"string",
                    "example": "Ashish"
                },
                "userStatus":{
                    "type": "string",
                    "example":"active"
                },
                "token":{
                    "type":"string",
                    "example": "eeqqquerhbsayugduyashgdasd"
                }
            }
        },

        "models.ErrorResponse": {
            "type":"object",
            "properties":{
                "status":{
                    "type":"string"
                }
            }
        }
    }
}


